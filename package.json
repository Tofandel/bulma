{
  "name": "bulma",
  "version": "0.8.2",
  "homepage": "https://bulma.io",
  "author": {
    "name": "Jeremy Thomas",
    "email": "bbxdesign@gmail.com",
    "url": "https://jgthms.com"
  },
  "description": "Modern CSS framework based on Flexbox",
  "main": "bulma.sass",
  "unpkg": "css/bulma.css",
  "style": "bulma/css/bulma.min.css",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jgthms/bulma.git"
  },
  "license": "MIT",
  "keywords": [
    "css",
    "sass",
    "flexbox",
    "responsive",
    "framework"
  ],
  "bugs": {
    "url": "https://github.com/jgthms/bulma/issues"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "clean-css": "^4.2.3",
    "node-sass": "^4.14.1",
    "postcss": "^7.0.32",
    "postcss-calc": "^7.0.2",
    "postcss-cli": "^7.1.1",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "build": "npm run build-clean && npm run build-sass && npm run build-sass-vars",
    "build-clean": "rimraf css",
    "build-theme-test": "node build.js css/bulma.theme.css bulma.sass test/themes/darkly.scss test/themes/united.scss",
    "build-sass": "node build.js css/bulma.css bulma.sass",
    "build-sass-vars": "node build.js css/bulma.themeable.css bulma.sass any",
    "deploy": "npm run build",
    "start": "npm run build-sass -- --watch"
  },
  "bin": {
    "bulma-build-css": "./build.js"
  },
  "files": [
    "css",
    "sass",
    "bulma.sass",
    "LICENSE",
    "README.md"
  ]
}
